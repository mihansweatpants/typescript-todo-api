{
  "extends": ["tslint-config-airbnb"],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "import-name": false,
    "function-name": false,
    "max-line-length": [ true, 120 ],
    "variable-name": false,
    "brace-style": [ "error", "stroustrup" ],
    "prefer-array-literal": false
  }
}
